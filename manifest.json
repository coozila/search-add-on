{
  "manifest_version": 3,
  "name": "Coozila Extension",
  "version": "1.0",
  "description": "A privacy-oriented search engine extension",
  "permissions": ["storage", "declarativeContent"],
  "action": {
    "default_icon": {
      "16": "coozila-icon-16.png",
      "48": "coozila-icon-48.png",
      "128": "coozila-icon-128.png"
    },
    "default_title": "Coozila Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "coozila-icon-16.png",
    "48": "coozila-icon-48.png",
    "128": "coozila-icon-128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.coozila.com/*", "https://www.coozila.co.uk/*", "https://www.coozila.it/*", "https://www.coozila.ro/*"],
      "js": ["content.js"]
    }
  ],
  "declarativeContent": {
    "pageChanged": {
      "conditions": [
        {
          "pageUrl": {
            "hostEquals": "www.coozila.com"
          }
        },
        {
          "pageUrl": {
            "hostEquals": "www.coozila.co.uk"
          }
        },
        {
          "pageUrl": {
            "hostEquals": "www.coozila.it"
          }
        },
        {
          "pageUrl": {
            "hostEquals": "www.coozila.ro"
          }
        }
      ],
      "actions": [
        {
          "type": "showPageAction"
        }
      ]
    }
  }
}
